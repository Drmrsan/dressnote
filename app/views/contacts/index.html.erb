<section id="about">
	<div class="about-content">
		<div class="container">
			<div class="row">
				<div class="col-md-2">
					<div class="category-filter">
						<div class="panel panel-default">
						 <ul class="list-group">
						 		<li class="list-group-item"><%= link_to "All", user_contacts_path %><span class="badge"><%= %></span></li>
 								<% Category.all.each do |category| %>
 									<li class="list-group-item"><%= link_to category.name, user_contacts_path(category: category.name) %><span class="badge"><%= category.contacts.count %></span></li>
 								<% end %>
						    </ul>
						</div>
					</div>
				</div>

				<%= form_tag user_contacts_path, method: :get, id: "search-box" do %>
					<%= text_field_tag :search, params[:search] %>
					<%= submit_tag "Search"  %>
				<% end %>
				
				<div class="col-md-10">
					<div id="contacts">
						<%= render "contacts" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>