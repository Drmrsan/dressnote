<div id="signin-form">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading"><h4>Logn in</h4></div>
          <div class="panel-body">

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

                    <%= f.input :email, autofocus: true, placeholder:"Email", label:false %>

                    <%= f.input :password, autocomplete: "off", placeholder: "Password (minimum 6 characters)", label:false %>

                  <% if devise_mapping.rememberable? -%>
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                  <% end -%>

                  <br>

                  <%= f.button :submit, "Log in", class: "" %>

            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>     
</div>