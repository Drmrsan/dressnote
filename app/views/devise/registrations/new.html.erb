<div class="ui middle aligned center aligned grid">
  <div id="signup" class="column">
    <form class="ui large form">
      <h2 class="ui teal header">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <div class="ui stacked segment">
              <div class="ui field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <%= f.email_field :email, autofocus: true, placeholder:"Email" %>
                </div>
              </div>

              <div class="field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password (minimum 6 characters)" %>
                </div>
              </div>

              <div class="field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password confirmation" %>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", class: "ui fluid large teal submit button" %>
              </div>
            </div>

        <% end %>
        <div class="ui message">
          Have an account? <%= render "devise/shared/links" %>
        </div>
    </form>
    
  </div>
</div>
