<div id="signin-form">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading"><h4>Sign up</h4></div>
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class: "form-horizontal"}) do |f| %>
              <%= devise_error_messages! %>

                      <%= f.input :email, autofocus: true, placeholder:"Email", label: false %>

                      <%= f.input :password, autocomplete: "off", placeholder: "Password (minimum 6 characters)", label: false %>

                      <%= f.input :password_confirmation, autocomplete: "off", placeholder:"Password confirmation", label: false %>

                    <%= f.button :submit, "Sign up", class: "" %>

            <% end %>

            Have an account? <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>     
</div>
 


      

